---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
---

<BaseLayout title="Resume">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Profile</div>
  </div>

  <div class="mb-10 text-justify">
    I am a CS student that's passionate about DSP, audio programming, various programming languages, and weeb stuff!
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Education</div>
  </div>

  <div class="time-line-container grid gap-4 mb-10">
    <TimeLineElement
      title="McGill University"
      subtitle="[2021] to [2025] at [McGill University], [Montreal], [Canada]"
    />
    <TimeLineElement
      title="Exchange at University of Tokyo"
      subtitle="[Sept 2023] to [March 2024] at [University of Tokyo], [Tokyo], [Japan]"
    />
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Experience</div>
  </div>

  <div class="time-line-container mb-10">
    <TimeLineElement
      title="Software Internship"
      subtitle="From [May 2023] to [Sept 2024] at [Flojoy.ai], [Montreal], [Canada]"
      desc="Worked on various front-end features using React and TypeScript"
    />
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Certifications</div>
  </div>

  <ul class="list-disc mx-6 mb-10 grid gap-2">
    <li>
      <a href="#" target="_blank"> Certification Name (with link)</a>
    </li>
    <li>
